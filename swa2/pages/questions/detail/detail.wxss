/* pages/questions/detail/detail.wxss */
.scrollarea {
  height: 100vh;
  width: 100%;
}

.container {
  padding: 24rpx;
  padding-top: 0; /* 导航栏已有内边距 */
  box-sizing: border-box;
}

/* 题目卡片 */
.question-card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  padding: 24rpx;
  margin-bottom: 24rpx;
}

/* 题目头部信息 */
.question-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.question-meta {
  display: flex;
  flex-direction: column;
}

.subject {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.info {
  font-size: 28rpx;
  color: #999;
}

.question-id {
  font-size: 24rpx;
  color: #999;
}

/* 题目内容 */
.question-content {
  margin-bottom: 24rpx;
}

.content-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.latex-container {
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  word-break: break-all;
  width: 100%;
  box-sizing: border-box;
  overflow-x: scroll;
  position: relative;
  max-width: 100vw !important;
}

/* 针对LaTeX内容的具体调整 */
.latex-container rich-text {
  width: 100%;
  display: block;
  overflow-x: scroll;
  max-width: 100% !important;
}

/* 强制所有内部元素限制宽度 - 具体选择器替代通用选择器 */
.latex-container rich-text,
.latex-container view,
.latex-container text,
.latex-container .katex,
.latex-container .katex-html,
.latex-container .katex-mathml {
  max-width: 100vw !important; 
  box-sizing: border-box !important;
}

/* 长公式显示辅助样式 */
.latex-container .katex-display {
  max-width: 100%;
  overflow-x: scroll;
  padding-bottom: 10rpx;
  white-space: nowrap !important;
}

/* 滚动提示指示器 */
.latex-container::after {
  content: "";
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  width: 20rpx;
  height: 20rpx;
  border-right: 3rpx solid #ccc;
  border-bottom: 3rpx solid #ccc;
  transform: rotate(-45deg);
  opacity: 0.8;
  pointer-events: none;
  animation: fadeInOut 1.5s infinite alternate;
}

@keyframes fadeInOut {
  from { opacity: 0.4; }
  to { opacity: 0.9; }
}

.images-container {
  margin-top: 16rpx;
}

.question-image {
  width: 100%;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.empty-content {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 题目底部 */
.question-footer {
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.answer-section, .note-section {
  margin-bottom: 16rpx;
}

.label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.value {
  font-size: 28rpx;
  color: #1296db;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
}

.share-button, .collect-button {
  width: 48% !important;
}

.scroll-hint {
  text-align: center;
  font-size: 22rpx;
  color: #999;
  margin-top: 5rpx;
  opacity: 0.8;
  animation: fadeInOut 1.5s infinite alternate;
} 