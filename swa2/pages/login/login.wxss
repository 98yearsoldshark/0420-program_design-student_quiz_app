/* pages/login/login.wxss */
.login-container {
  padding: 40rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f7f8fa;
}

.logo-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0 80rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-top: 20rpx;
}

.form-wrapper {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.input-wrapper {
  margin-bottom: 30rpx;
}

.remember-wrapper {
  margin-bottom: 40rpx;
}

.checkbox-label {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #646566;
}

.checkbox-label checkbox {
  margin-right: 10rpx;
}

.button-wrapper {
  margin-bottom: 30rpx;
}

.register-wrapper {
  display: flex;
  justify-content: center;
  font-size: 28rpx;
  color: #646566;
}

.register-link {
  color: #1296db;
  margin-left: 10rpx;
} 