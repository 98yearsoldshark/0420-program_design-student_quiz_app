<!-- pages/changePassword/changePassword.wxml -->
<navigation-bar title="修改密码" back="{{true}}" color="black" background="#FFF"></navigation-bar>

<view class="change-password-container">
  <view class="form-wrapper">
    <!-- 当前密码 -->
    <view class="input-wrapper">
      <custom-input 
        label="当前密码" 
        value="{{currentPassword}}" 
        type="text" 
        password="{{true}}" 
        placeholder="请输入当前密码" 
        hasError="{{!!currentPasswordError}}" 
        errorMessage="{{currentPasswordError}}" 
        bindinput="handleCurrentPasswordInput" 
        required="{{true}}"
      />
    </view>
    
    <!-- 新密码 -->
    <view class="input-wrapper">
      <custom-input 
        label="新密码" 
        value="{{newPassword}}" 
        type="text" 
        password="{{true}}" 
        placeholder="请输入新密码" 
        hasError="{{!!newPasswordError}}" 
        errorMessage="{{newPasswordError}}" 
        bindinput="handleNewPasswordInput" 
        required="{{true}}"
      />
    </view>
    
    <!-- 确认新密码 -->
    <view class="input-wrapper">
      <custom-input 
        label="确认新密码" 
        value="{{confirmPassword}}" 
        type="text" 
        password="{{true}}" 
        placeholder="请再次输入新密码" 
        hasError="{{!!confirmPasswordError}}" 
        errorMessage="{{confirmPasswordError}}" 
        bindinput="handleConfirmPasswordInput" 
        required="{{true}}"
      />
    </view>
    
    <!-- 提示信息 -->
    <view class="tips">
      <text>密码长度至少为3位，建议使用字母、数字和符号的组合</text>
    </view>
    
    <!-- 修改按钮 -->
    <view class="button-wrapper">
      <custom-button 
        text="确认修改" 
        type="primary" 
        block="{{true}}" 
        disabled="{{isLoading}}" 
        loading="{{isLoading}}" 
        bindtap="handleChangePassword"
      />
    </view>
  </view>
</view> 