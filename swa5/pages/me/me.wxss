/* pages/me/me.wxss */
.me-container {
  min-height: 100vh;
  background-color: #f7f8fa;
  padding-bottom: 30rpx;
}

.user-info-wrapper {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.avatar-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  overflow: hidden;
  margin-right: 30rpx;
  background-color: #f5f5f5;
}

.avatar {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-role {
  font-size: 26rpx;
  color: #909399;
}

.login-text {
  font-size: 32rpx;
  color: #1296db;
}

.menu-list {
  padding: 0 20rpx;
}

.menu-group {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.menu-group-title {
  font-size: 28rpx;
  color: #909399;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item-left {
  display: flex;
  align-items: center;
}

.menu-item-label {
  font-size: 28rpx;
  color: #323233;
}

.menu-item-right {
  display: flex;
  align-items: center;
}

.menu-item-value {
  font-size: 28rpx;
  color: #969799;
  margin-right: 10rpx;
}

.menu-item-arrow {
  font-size: 28rpx;
  color: #c8c9cc;
}

.logout-item {
  display: flex;
  justify-content: center;
  color: #ee0a24;
  font-size: 28rpx;
} 