/* pages/questions/list/list.wxss */
.scrollarea {
  height: 100vh;
  width: 100%;
}

.container {
  padding: 24rpx;
  padding-top: 0; /* 导航栏已有内边距 */
  box-sizing: border-box;
}

/* 筛选区域样式 */
.filter-container {
  display: flex;
  flex-wrap: wrap;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 12rpx 0;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.filter-item {
  width: 50%;
  padding: 12rpx 24rpx;
  box-sizing: border-box;
}

.picker-content {
  display: flex;
  align-items: center;
}

.picker-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 12rpx;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 题目列表样式 */
.question-list {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.question-item {
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;
}

.question-item:last-child {
  border-bottom: none;
}

.question-item:active {
  background-color: #f9f9f9;
}

.question-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.question-subject {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.question-meta {
  font-size: 26rpx;
  color: #999;
}

.question-content {
  margin-top: 12rpx;
}

.question-preview {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.preview-label {
  display: inline-block;
  background-color: #e8f4ff;
  color: #1296db;
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
  margin-bottom: 8rpx;
}

.preview-text {
  font-size: 28rpx;
  color: #666;
  word-break: break-all;
}

/* LaTeX预览样式 */
.latex-preview {
  margin-top: 8rpx;
  padding: 8rpx 12rpx;
  background-color: #f9f9f9;
  border-radius: 6rpx;
  overflow-x: scroll;
  max-height: 120rpx;
  width: 100%;
  box-sizing: border-box;
  white-space: nowrap;
  position: relative;
  max-width: 100vw !important;
}

/* 针对LaTeX内容的样式调整 */
.latex-preview rich-text {
  width: 100%;
  display: block;
  overflow-x: scroll;
  max-width: 100% !important;
}

/* 强制所有内部元素限制宽度 - 具体选择器替代通用选择器 */
.latex-preview rich-text,
.latex-preview view,
.latex-preview text,
.latex-preview .katex,
.latex-preview .katex-html,
.latex-preview .katex-mathml {
  max-width: 100vw !important; 
  box-sizing: border-box !important;
}

/* 添加滚动提示箭头 */
.latex-preview::after {
  content: "";
  position: absolute;
  right: 5rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 20rpx;
  height: 20rpx;
  border-right: 3rpx solid #ccc;
  border-bottom: 3rpx solid #ccc;
  transform: translateY(-50%) rotate(-45deg);
  opacity: 0.8;
  pointer-events: none;
}

/* 空状态 */
.empty-state {
  padding: 60rpx;
  text-align: center;
  color: #999;
  font-size: 30rpx;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 30rpx 0;
  color: #666;
  font-size: 28rpx;
}

.scroll-hint {
  text-align: center;
  font-size: 22rpx;
  color: #999;
  margin-top: 5rpx;
} 